---
import LayoutDefault from "../layouts/Default.astro";
import Title from "../components/global/Title.astro";
import Giscus from "../components/global/Giscus.astro";

const description =
	"Don't be shy to say hello, feel free to post anything, even shitpost is allowed.";
---

<LayoutDefault title="Guestbook - Anas Rin" description={description}>
	<main class="container">
		<div class="page-info">
			<Title as="h1" size="h3">Guestbook</Title>
			<p class="description">{description}</p>
		</div>

		<div>
			<Giscus textWriteButton="Write Guestbook" />
		</div>
	</main>
</LayoutDefault>
<style lang="scss">
	.container {
		display: flex;
		flex-flow: column nowrap;
		gap: 1rem;
		width: 100%;
		max-width: var(--container-sm);
		margin: 1rem auto 0;
		padding: 1.5rem 0.75rem 0.75rem;
	}

	.page-info {
		display: flex;
		flex-flow: column nowrap;
		gap: 0.25rem;
	}

	.description {
		margin: 0;
		color: #a6a7ab;
		font-size: 0.95rem;

		html.light & {
			color: #5c5f66;
		}
	}
</style>
