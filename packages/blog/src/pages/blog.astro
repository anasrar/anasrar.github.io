---
import LayoutDefault from "../layouts/Default.astro";
import Title from "../components/global/Title.astro";
import { getCollection } from "astro:content";
import { compareDesc, format } from "date-fns";

const posts = (await getCollection("blog"))
	.filter(({ slug }) => {
		return !slug.includes("/"); // exclude i18n
	})
	.sort((a, b) => compareDesc(a.data.date, b.data.date));
---

<LayoutDefault
	title="Blog - Anas Rin"
	description="Mostly write all about programming, projects, and technology. I also post on DEV Community ğŸ‘©â€ğŸ’»ğŸ‘¨â€ğŸ’»."
>
	<main class="container">
		<div class="page-info">
			<Title as="h1" size="h3">Blog</Title>
			<p class="description">
				Mostly write all about programming, projects, and technology. I
				also post on <a href="//dev.to/anasrin">DEV Community ğŸ‘©â€ğŸ’»ğŸ‘¨â€ğŸ’»</a>.
			</p>
		</div>
		<div>
			<ul>
				{
					posts.map((post) => (
						<li>
							<a href={`${post.slug}/`} title={post.data.title}>
								{post.data.title}
							</a>
							<div class="information">
								<time
									title={post.data.date.toISOString()}
									datetime={post.data.date.toISOString()}
								>
									{format(post.data.date, "LLLL dd, yyyy")}
								</time>
							</div>
						</li>
					))
				}
			</ul>
		</div>
	</main>
</LayoutDefault>
<style lang="scss">
	.container {
		display: flex;
		flex-flow: column nowrap;
		gap: 1rem;
		width: 100%;
		max-width: var(--container-sm);
		margin: 1rem auto 0;
		padding: 1.5rem 0.75rem 0.75rem;
	}

	.page-info {
		display: flex;
		flex-flow: column nowrap;
		gap: 0.25rem;
	}

	.description {
		margin: 0;
		color: #a6a7ab;
		font-size: 0.95rem;

		html.light & {
			color: #5c5f66;
		}
	}

	ul {
		display: flex;
		flex-flow: column nowrap;
		gap: 0.25rem;
		margin: 0;
		padding: 0;
		list-style: none;
	}

	li {
		display: flex;
		flex-flow: row nowrap;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		margin: 0;
		padding: 0;

		&:hover > a {
			opacity: 0.75;
		}

		& > a {
			flex: 1 0;
			overflow: hidden;
			text-overflow: ellipsis;
			color: inherit !important;
			font-weight: 600;
			font-size: 1rem;
			text-decoration: none !important;
			white-space: nowrap;
		}
	}

	.information {
		color: #a6a7ab;
		font-size: 0.875rem;
		font-variant-numeric: tabular-nums;
		cursor: help;

		html.light & {
			color: #5c5f66;
		}
	}
</style>
