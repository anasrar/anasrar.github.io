---
import Button from "./Button.astro";
---

<footer>
	<div class="container">
		<nav class="group-btn">
			<Button
				as="anchor"
				class="btn-square"
				href="mailto:mynameanasrar@gmail.com"
				title="Send Email"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="icon icon-tabler icon-tabler-at"
					width="18"
					height="18"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<circle cx="12" cy="12" r="4"></circle>
					<path
						d="M16 12v1.5a2.5 2.5 0 0 0 5 0v-1.5a9 9 0 1 0 -5.5 8.28"
					></path>
				</svg>
			</Button>
			<Button
				as="anchor"
				class="btn-square"
				href="//twitter.com/rrrriiiiiinnnn"
				target="_blank"
				title="My Twitter Account"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="icon icon-tabler icon-tabler-brand-twitter"
					width="18"
					height="18"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<path
						d="M22 4.01c-1 .49 -1.98 .689 -3 .99c-1.121 -1.265 -2.783 -1.335 -4.38 -.737s-2.643 2.06 -2.62 3.737v1c-3.245 .083 -6.135 -1.395 -8 -4c0 0 -4.182 7.433 4 11c-1.872 1.247 -3.739 2.088 -6 2c3.308 1.803 6.913 2.423 10.034 1.517c3.58 -1.04 6.522 -3.723 7.651 -7.742a13.84 13.84 0 0 0 .497 -3.753c-.002 -.249 1.51 -2.772 1.818 -4.013z"
					></path>
				</svg>
			</Button>
			<Button
				as="anchor"
				class="btn-square"
				href="//youtube.com/@anasrin"
				target="_blank"
				title="My YouTube Channel"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="icon icon-tabler icon-tabler-brand-youtube"
					width="18"
					height="18"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<rect x="3" y="5" width="18" height="14" rx="4"></rect>
					<path d="M10 9l5 3l-5 3z"></path>
				</svg>
			</Button>
			<Button
				as="anchor"
				class="btn-square"
				href="//github.com/anasrar"
				target="_blank"
				title="My GitHub Account"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="icon icon-tabler icon-tabler-brand-github"
					width="18"
					height="18"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<path
						d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
					></path>
				</svg>
			</Button>
			<Button
				as="anchor"
				href={`${
					import.meta.env.DEV
						? "http://" + Astro.url.host + "/"
						: Astro.site
				}rss/blog.xml`}
				class="btn-square"
				title="RSS Blog"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="icon icon-tabler icon-tabler-rss"
					width="18"
					height="18"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<circle cx="5" cy="19" r="1"></circle>
					<path d="M4 4a16 16 0 0 1 16 16"></path>
					<path d="M4 11a9 9 0 0 1 9 9"></path>
				</svg>
			</Button>
		</nav>
		<div class="text">
			Made with <span class="heart">❤</span> by Anas Rin — Powered by Astro
			& GitHub Page
		</div>
	</div>
</footer>

<style lang="scss">
	footer {
		display: flex;
		flex-flow: row nowrap;
		justify-content: center;
		align-items: center;
		margin-top: auto;
	}

	.container {
		display: flex;
		flex: 1 1 auto;
		flex-flow: row nowrap;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		max-width: var(--container-sm);
		padding: 0.75rem 0.75rem 1.5rem;

		@media (max-width: 37.25rem) {
			& {
				flex-flow: column nowrap;
				text-align: center;
			}
		}
	}

	.group-btn {
		display: flex;
		flex-flow: row_nowrap;
		gap: 0.5rem;
		align-items: center;
	}

	.text {
		font-weight: 500;
		font-size: 0.79rem;
	}

	.heart {
		color: #fa5252;
	}
</style>
