---
type Anchor = {
	as?: "anchor";
} & astroHTML.JSX.AnchorHTMLAttributes;
type Button = {
	as?: "button";
} & astroHTML.JSX.ButtonHTMLAttributes;
type Props = Anchor | Button;
const { as = "button", class: className, ...props } = Astro.props;
---

{
	as === "button" ? (
		<button
			class={`btn ${className}`}
			{...(props as astroHTML.JSX.ButtonHTMLAttributes)}
		>
			<slot />
		</button>
	) : (
		<a
			class={`btn ${className}`}
			{...(props as astroHTML.JSX.AnchorHTMLAttributes)}
		>
			<slot />
		</a>
	)
}

<style lang="scss">
	.btn {
		display: flex;
		flex-flow: row nowrap;
		justify-content: center;
		align-items: center;
		gap: 0.5rem;
		height: 2rem;
		padding: 0 0.5rem;
		border: 1px solid #373a40;
		border-radius: 0.25rem;
		color: inherit;
		background: #1a1b1e;
		font-family: inherit;
		font-weight: 600;
		font-size: 0.8rem;
		text-decoration: none;
		cursor: pointer;
		transition: background 0.1s linear, color 0.1s linear;

		html.light & {
			border-color: #ced4da;
			background: #f8f9fa;

			&:hover {
				background: #f1f3f5;
			}
		}

		&:disabled {
			border-color: #25262b !important;
			color: #101113 !important;
			background: #25262b !important;
			pointer-events: none;
		}
		&:hover {
			background: #25262b;
		}
		&:active {
			transform: translate(0, 0.1rem);
		}
		&.btn-square {
			width: 2rem;
			padding: 0;
		}
		&.btn-compact {
			height: 1.6rem;
			padding: 0 0.25rem;
		}
		&.btn-xs {
			height: 1.8rem;
			padding: 0 0.3rem;
			font-size: 0.7rem;
			&.btn-square {
				width: 1.8rem;
				padding: 0;
			}
			&.btn-compact {
				height: 1.4rem;
				padding: 0 0.15rem;
			}
		}
		&.btn-md {
			height: 2.2rem;
			padding: 0 0.6rem;
			font-size: 0.9rem;
			&.btn-square {
				width: 2.2rem;
				padding: 0;
			}
			&.btn-compact {
